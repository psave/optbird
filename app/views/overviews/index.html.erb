<div class="container is-fluid">

  <header>
    <!-- Main container -->
    <nav class="navbar">
      <!-- Left side -->
      <div class="navbar-left is-grouped">
        <div class="navbar-item">
          <h3 class="title is-3">UBC Occupancy Analysis</h3>
        </div>
        <div class="tabs is-boxed">
          <ul>
            <li class="is-active"><a>Graph 1</a></li>
            <li><a>Graph 2</a></li>
            <li><a>Graph 3</a></li>
            <li><a>Graph 4</a></li>
          </ul>
        </div>
      </div>

      <!-- Right side -->
      <div class="navbar-right">
        <div>
          <a class="button is-primary">Logout</a>
        </div>
      </div>
    </nav>
  </header>

  <section class="section">
    <div class="columns">

      <div class="column is-9">
        <div id="graphContainer" style="min-width: 310px; height: 400px; margin: 0 auto">
        </div>
      </div>

      <div class="column graph_controls">
        <h5 class="title is-5">Graph Controls</h5>
        <label class="label">Building</label>
          <p class="control">
            <span class="select">
             <%= select_tag "building_choices", options_from_collection_for_select(@buildings, "id", "building_name")%>
            </span>
          </p>

      </div>

    </div>
  </section>

</div>
