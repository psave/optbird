<script src="/splashpage.js"></script>

<div id="splashpage">

  <div id="login-form">
    <h3 class="subtitle is-4" id="login-title">Please Log In</h3>

    <%= form_tag sessions_path do %>
      <div>
        <form class="login">
          <%= label_tag :name, nil, class: 'label content' %>
          <%= text_field_tag :name, nil, class: 'input' %>
          <br>
          <%= label_tag :password, nil, class: 'label content' %>
          <%= password_field_tag :password, nil, class: 'input' %>
          <br>
          <p class="control">
            <button class="button is-primary">Submit</button>
          </p>
        </form>
      </div>
    <% end %>

  </div>

</div>
