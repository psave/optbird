 <section class="section">
    <div class="columns">
      <div class="column is-9">
        <div id="graph1" class="graphContainer" style="min-width: 310px; height: 400px; margin: 0 auto">
        </div>
        <div id="graph1BarDay" class="graphContainer" style="min-width: 310px; height: 400px; margin: 0 auto">
        </div>
        
        <div id="graph1BarTime" class="graphContainer" style="min-width: 310px; height: 400px; margin: 0 auto">
        </div>
      </div>
    
      <div class="column graph_controls">
        <h5 class="title is-5">Graph Controls</h5>
        <label class="label">Building</label>
        <p class="control">
          <span class="select">
           <%= select_tag "building_choice", options_from_collection_for_select(@buildings, 'id', 'building_name'), class: "building_choice" %>
          </span>
        </p>
        <div class='room_choice_container'>
          <label class="label">Room</label>
          <p class="control">
            <span class="select">
              <select class="room_choice" ><select value='1'></select></select>
            </span>
          </p>
        </div>

<!--         <div id="graph1_date_pickers">
          <label class="label" for="datepicker" id="graph1_start_date">Start Date</label>
           <div class="content">
             <input type="text" class="start_date">
          </div>
          <label class="label" for="datepicker" id="graph1_end_date">End Date</label>
          <div class="content">
            <input type="text" class="end_date">
          </div>
        </div> -->

        <div id="graph1_start_date_picker">
         <label class="label" for="datepicker" id="graph1_start_date">Start Date</label>
          <div class="content">
            <input type="text" id="start_date">
         </div>
       </div>
       <div id="graph1_end_date_picker">
         <label class="label" for="datepicker" id="graph1_end_date">End Date</label>
         <div class="content">
           <input type="text" id="end_date">
         </div>
       </div>

      <div id="number_or_percent">
        <label class="label">Number/Percent</label>
        <p class="control">
          <span class="select">
            <select class="num_percent_choice">
              <option value="Number">Number of Occupants</option>
              <option value="Percent">Percent Occupancy</option>
            </select>
          </span>
        </p>
      </div>

        <div id="sliders">
        <h5 class="title is-5">3D Graph Controls</h5>
          <table>
              <tr>
                <td>Alpha Angle</td>
                <td><input id="alpha" type="range" min="0" max="45" value="15"/>
                <span id="alpha-value" class="value"></span></td>
              </tr>
              <tr>
                <td>Beta Angle</td>
                <td><input id="beta" type="range" min="-45" max="45" value="15"/>
                <span id="beta-value" class="value"></span></td>
              </tr>
              <tr>
                <td>Depth</td>
                <td><input id="depth" type="range" min="20" max="100" value="50"/>
                <span id="depth-value" class="value"></span></td>
              </tr>
          </table>
        </div>
      </div>

    </div>
  </section>
